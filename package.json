{
    "name": "webcpu",
    "version": "0.0.1",
    "description": "Detect the number of usable cores to perform data processing in the browser",
    "main": "src/index.js",
    "repository": "https://github.com/darionco/WebCPU.git",
    "author": "Dario Segura",
    "license": "MIT",
    "scripts": {
        "build": "npm-run-all --parallel build:**",
        "build:dev": "webpack",
        "build:dev:browser": "cross-env TARGET='browser' webpack",
        "build:prod": "cross-env NODE_ENV='production' webpack -p",
        "build:prod:browser": "cross-env NODE_ENV='production' TARGET='browser' webpack -p",
        "start": "cross-env TARGET='browser' webpack-dev-server --host 0.0.0.0 --port 8090 --content-base ./www --hot --disableHostCheck",
        "watch": "cross-env TARGET='browser' webpack --watch --progress"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "eslint": "^5.15.1",
        "eslint-loader": "^2.1.2",
        "npm-run-all": "^4.1.5",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1",
        "worker-loader": "^2.0.0"
    }
}
